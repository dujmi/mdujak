---
import "../styles/global.css";

const { title = "Mislav Dujak" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="../src/assets/favicon.jpg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script
      src="https://kit.fontawesome.com/68fab0f1af.js"
      crossorigin="anonymous"></script>
  </head>
  <body
    class="bg-background text-foreground accent-accent max-w-full min-h-full font-sans px-5 pt-10 pb-10 md:px-0 md:max-w-3xl md:mx-auto"
  >
    <slot />
  </body>
</html>
