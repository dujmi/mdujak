---
import { Image } from "astro:assets";

import Favicon from "../assets/favicon.jpg";
import Share from "@/components/Share.tsx";

const { subtitle = "STUDENT @CROATIA" } = Astro.props;
---

<nav class="flex flex-row items-center justify-between w-full relative">
  <div class="flex items-center justify-left gap-[1rem]">
    <a
      href="/"
      class="rounded-full hover:outline-3 hover:outline-md-accent p-1 transition-all duration-75 ease-in-out"
      data-astro-prefetch="load"
    >
      <Image
        src={Favicon}
        alt="Mislav Dujak"
        loading="eager"
        class="rounded-full w-16 h-16"
      />
    </a>
    <hgroup class="flex flex-col items-start justify-center gap-1.5">
      <h1 class="font-accent font-bold text-xl leading-none">Mislav Dujak</h1>
      <p class="font-accent text-md-muted leading-none uppercase">{subtitle}</p>
    </hgroup>
  </div>
  <Share client:load />
</nav>
